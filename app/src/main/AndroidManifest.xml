<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.ikvakan.git_hub_search">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:name="hr.ikvakan.git_hub_search.hilt.GitHubSearch"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Decode_demo">
        <activity android:name="hr.ikvakan.git_hub_search.ui.activity.WebViewActivity" />
        <activity android:name="hr.ikvakan.git_hub_search.ui.activity.RepositoryPagerActivity" />
        <activity android:name="hr.ikvakan.git_hub_search.ui.activity.HostActivity" />
        <activity
            android:name="hr.ikvakan.git_hub_search.ui.activity.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>