<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivAvatarPagerItem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="9dp"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="@dimen/tvWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/tvPadding"
                android:text="Repository"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRepositoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Repository name" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="@dimen/tvWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/tvPadding"
                android:text="User name"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="User name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="@dimen/tvWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/tvPadding"
                android:text="Language"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Language" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="@dimen/tvWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/tvPadding"
                android:text="Created at"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="@dimen/tvWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/tvPadding"
                android:text="Last modified"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLastModified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Description"
                android:textSize="@dimen/tvRepositoryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescirptionPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making this the first true generator on the Internet. It uses a dictionary of over 200 "
                android:textAlignment="viewStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layoutPadding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tvPaddingTable"
                    android:text="Forks:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvForkCount"
                    android:layout_width="@dimen/ivWidthPager"
                    android:layout_height="@dimen/ivHeightPager"
                    android:text="20"

                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tvPaddingTable"
                    android:text="Watchers:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWatchersCount"
                    android:layout_width="@dimen/ivWidthPager"
                    android:layout_height="@dimen/ivHeightPager"
                    android:text="20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tvPaddingTable"
                    android:text="Open issues:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOpenIssueCount"
                    android:layout_width="@dimen/ivWidthPager"
                    android:layout_height="@dimen/ivHeightPager"
                    android:text="20" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnGoToGithub"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Repository" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>